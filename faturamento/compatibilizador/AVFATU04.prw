//
aAdd( aSIX, { ;
	'SCR'																	, ; //INDICE
	'3'																		, ; //ORDEM
	'CR_FILIAL+CR_TIPO+CR_NUM+CR_NIVEL+CR_USER'								, ; //CHAVE
	'Tipo Docto, Documento, Nivel e Cod. Usuario'							, ; //DESCRICAO
	'Tipo Docto, Documento, Nivel e Cod. Usuario'							, ; //DESCSPA
	'Tipo Docto, Documento, Nivel e Cod. Usuario'							, ; //DESCENG
	'U'																		, ; //PROPRI
	''																		, ; //F3
	'SCRWF01'																, ; //NICKNAME
	'N'																		} ) //SHOWPESQ

aAdd( aSIX, { ;
	'SCR'																	, ; //INDICE
	'4'																		, ; //ORDEM
	'CR_FILIAL+CR_TIPO+CR_NUM+CR_USER+CR_NIVEL'								, ; //CHAVE
	'Tipo Docto, Documento, Cod. Usuario e Nivel'							, ; //DESCRICAO
	'Tipo Docto, Documento, Cod. Usuario e Nivel'							, ; //DESCSPA
	'Tipo Docto, Documento, Cod. Usuario e Nivel'							, ; //DESCENG
	'U'																		, ; //PROPRI
	''																		, ; //F3
	'SCRWF02'																, ; //NICKNAME
	'N'																		} ) //SHOWPESQ

//
// Atualizando dicionário
//
oProcess:SetRegua2( Len( aSIX ) )

dbSelectArea( "SIX" )
SIX->( dbSetOrder( 1 ) )

For nI := 1 To Len( aSIX )

	lAlt    := .F.
	lDelInd := .F.

	If !SIX->( dbSeek( aSIX[nI][1] + aSIX[nI][2] ) )
		cTexto += "Índice criado " + aSIX[nI][1] + "/" + aSIX[nI][2] + " - " + aSIX[nI][3] + CRLF
	Else
		lAlt := .T.
		aAdd( aArqUpd, aSIX[nI][1] )
		If !StrTran( Upper( AllTrim( CHAVE )       ), " ", "") == ;
		    StrTran( Upper( AllTrim( aSIX[nI][3] ) ), " ", "" )
			cTexto += "Chave do índice alterado " + aSIX[nI][1] + "/" + aSIX[nI][2] + " - " + aSIX[nI][3] + CRLF
			lDelInd := .T. // Se for alteração precisa apagar o indice do banco
		EndIf
	EndIf

	RecLock( "SIX", !lAlt )
	For nJ := 1 To Len( aSIX[nI] )
		If FieldPos( aEstrut[nJ] ) > 0
			FieldPut( FieldPos( aEstrut[nJ] ), aSIX[nI][nJ] )
		EndIf
	Next nJ
	MsUnLock()

	dbCommit()

	If lDelInd
		TcInternal( 60, RetSqlName( aSIX[nI][1] ) + "|" + RetSqlName( aSIX[nI][1] ) + aSIX[nI][2] )
	EndIf

	oProcess:IncRegua2( "Atualizando índices..." )

Next nI

cTexto += CRLF + "Final da Atualização" + " SIX" + CRLF + Replicate( "-", 128 ) + CRLF + CRLF

Return NIL


